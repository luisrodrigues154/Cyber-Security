+typedef struct { int p[3]; } Pos;
+struct NormalModeState {
+	struct OperationState {
+		enum Op {noop=0, visual='v', visualLine='V', yank = 'y'} op;
+		enum Infix {infix_none=0, infix_i='i', infix_a='a'} infix;
+	} cmd;
